<div id="<%= dom_id message %>" class="scaffold-record">
  <p>
    <strong>Body:</strong>
    <%= message.body %>
  </p>
     <% if  params[:action] != "show" %>
      <%= link_to "Show this message", message %> <br>
      <%= button_to "Edit this message", edit_message_path(message), method: :post %>
      <%= button_to "Destroy this message", message, method: :delete %>
      <%end%>
</div>
